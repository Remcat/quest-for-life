- title 'Rationals'

= link_to 'Add a rational', new_rational_option_path

%ol
  - for rational_option in current_objects
    %li
      = rational_option.numerator
      = "/"
      = rational_option.denominator
      = "="
      = rational_option.quotient
      = link_to 'Delete', rational_option, :method => :delete, :confirm => 'Are you sure?'