- title 'Log in'

#password_form
  - semantic_form_for :session, :url => session_path do |form|
    = form.input :email
    = form.input :password, :as => :password
    = form.input :remember_me, :as => :boolean
    - form.buttons do
      = form.commit_button "Log in", :disable_with => "Please wait..."
            
#openid_form
  %p Or log in using OpenID&hellip;

  - form_tag(session_url) do
    .text_field
      = label_tag :openid_url, 'OpenID'
      = text_field_tag :openid_url, @openid_url
    .submit_field
      = submit_tag "Log in", :disable_with => "Please wait..."

%ul
  %li= link_to "Sign up", new_user_path
  %li= link_to "Forgot password?", new_password_path
